/*
Defina seus atalhos rápidos para a barra de status aqui.
Você pode usar ícones deste site: https://fontawesome.com/search?ic=free
Você pode recarregar o Waybar com SUPER + SHIFT + B
*/
{
    "custom/quicklink_browser": {
        "format": "",
        "on-click": "~/.config/ml4w/settings/browser.sh",
        "tooltip-format": "Abrir Navegador"
    },
    "custom/quicklink_filemanager": {
        "format": "",
        "on-click": "~/.config/ml4w/settings/filemanager.sh",
        "tooltip-format": "Abrir Gerenciador de Arquivos"
    },
    "custom/quicklink_email": {
        "format": "",
        "on-click": "~/.config/ml4w/settings/email.sh",
        "tooltip-format": "Abrir Cliente de E-mail"
    },
    "custom/quicklink_chromium": {
        "format": "",
        "on-click": "chromium",
        "tooltip-format": "Abrir Chromium"
    },
    "custom/quicklink_edge": {
        "format": "",
        "on-click": "edge",
        "tooltip-format": "Abrir Edge"
    },
    "custom/quicklink_firefox": {
        "format": "",
        "on-click": "firefox",
        "tooltip-format": "Abrir Firefox"
    },
    "custom/quicklink_thunderbird": {
        "format": "",
        "on-click": "thunderbird",
        "tooltip-format": "Abrir Thunderbird"
    },
    "custom/quicklink_calculator": {
        "format": "",
        "on-click": "~/.config/ml4w/settings/calculator.sh",
        "tooltip-format": "Abrir Calculadora"
    },
/*
Não remova o quicklinkempty
*/
    "custom/quicklinkempty": {
    },
/*
Adicione seus atalhos rápidos na ordem desejada para a barra de status
*/
    "group/quicklinks": {
        "orientation": "horizontal",
        "modules": [

            "custom/quicklink_browser",
            "custom/quicklink_email",
            "custom/quicklink_filemanager",

/*
Não remova o quicklinkempty
*/
            "custom/quicklinkempty"
        ]
    }
}
